<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pieter.papper.RobotSelectFragment">

    <Spinner
        android:id="@+id/robot_select_spinner"
        android:layout_width="228dp"
        android:layout_height="26dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/connect_button"
        android:layout_width="111dp"
        android:layout_height="48dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/connect_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/disconnect_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/robot_select_spinner"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/disconnect_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/disconnect_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/connect_button"
        app:layout_constraintTop_toBottomOf="@+id/robot_select_spinner"
        app:layout_constraintVertical_bias="0.034" />
</android.support.constraint.ConstraintLayout>
